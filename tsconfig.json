{
	"compilerOptions": {
		"outDir": "build/dist",
		"module": "ESNext",
		"target": "es5",
		"lib": ["es6", "dom"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"rootDir": "src",
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	],
	"types": ["typePatches"]
}
